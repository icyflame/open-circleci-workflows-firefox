{
  "manifest_version": 2,
  "name": "Open CircleCI Workflows",
  "description": "Go from a GitHub page to the CircleCI workflows page for the repository",
  "version": "1.0.1",
  "homepage_url": "https://www.siddharthkannan.in",

  "icons": {
    "60": "icons/open-circleci-workflows-60.png",
    "40": "icons/open-circleci-workflows-40.png"
  },

  "background": {
    "scripts": [
      "background.js"
    ]
  },

  "page_action": {
    "default_icon": "icons/open-circleci-workflows-60.png",
    "browser_style": true
  },

  "commands": {
    "_execute_page_action": {
      "suggested_key": {
        "default": "Alt+I"
      }
    }
  },

  "permissions": [
    "activeTab",
    "tabs"
  ]
}
